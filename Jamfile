SubDir TOP liero ;

C++FLAGS = -Wall -I$(TOP) ;
CFLAGS = -Wall -I$(TOP) ;
#OPTIM = -O3 ;
OPTIM = -O0 ;
LINK = "g++" ;
LINKFLAGS = "-lSDL -lSDL_mixer" ;

Main openliero : blit.cpp bobject.cpp bonus.cpp common.cpp console.cpp
	constants.cpp filesystem.cpp font.cpp game.cpp
	gfx.cpp keys.cpp level.cpp main.cpp math.cpp
	menu.cpp ninjarope.cpp nobject.cpp palette.cpp rand.cpp
	reader.cpp sdlmain.cpp replay.cpp settings.cpp sfx.cpp
	sobject.cpp sys.cpp text.cpp viewport.cpp weapon.cpp
	weapsel.cpp worm.cpp ;
	
MakeLocate openliero$(SUFEXE) : $(TOP)/liero/_bin ;
	
LinkLibraries openliero : libgvl ;

SubInclude TOP gvl ;
